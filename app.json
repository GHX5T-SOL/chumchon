{
  "expo": {
    "name": "Chumchon",
    "slug": "chumchon",
    "version": "1.0.0",
    "description": "Chumchon - A Solana-powered social app for communities.",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "templateexpobasic",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.chumchon"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.anonymous.chumchon"
    },
    "web": {
      "bundler": "metro",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#FFFFFF",
          "dark": {
            "backgroundColor": "#000000",
            "image": "./assets/images/splash.png"
          },
          "image": "./assets/images/splash.png",
          "imageWidth": 200,
          "resizeMode": "contain"
        }
      ],
      "expo-web-browser",
      "expo-font",
      [
        "@solana-mobile/mobile-wallet-adapter-expo-bottom-sheet",
        {
          "walletUriBase": "https://phantom.app"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "84e8dcd8-1c98-40a2-9eac-98ead946c368"
      }
    }
  }
}
